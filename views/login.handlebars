<div class="container">
  <div class = "row">
    <div class = "col-md-6">
      <h1 id="signInHeader">Sign In</h1>
    </div>
    <div class= "col-md-6">
      <div id="signInDisplay">
        <div class="panel panel-primary">
          <div class="panel-heading"><h3 class="panel-title"><strong>Sign in Here!</strong></h3></div>
          <div class="panel-body">
            <form id="signin" name="signin" method="post" action="/signin" class="signup">
                <div class="form-group">
                  <label for ="email">Email Address:</label>
                  <input type="email" name="email" class="form-control" id="loginemail" placeholder="Email Address">
                </div>
                <div class="form-group">
                  <label for ="exampleInputFirstName">Password:</label>
                  <input type="password" name="password" class="form-control" id="loginpassword" placeholder="Password">
                </div>
                <input class="btn btn-success" type="submit" value="Sign In" />

            </form>
          </div>
        </div>
      </div>
      {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
      {{/if}}
      {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
      {{/if}}
      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}
    </div>
  </div>
</div>

<script src="js/login.js" type="text/javascript"></script>
