

<div class="container">
	<div class = "row">
		<div class = "col-md-6">
			<h1>Record Receipts</h1>

		</div>
		<div class = "col-md-6">
			<div class="container" id = "form-container">
				<h3 class="header">Use the form below to record received inventory</h3>
					<form>
						<div class="col-md-3"></div>
						<div class="col-md-6">

								<div class = "form-group">
				            		<label for = "ingredientRecpt">Enter Ingredient Received: </label>
				              		<select type="text" class = "form-control" name = "ingredient" id="ingredientDrop"></select>

				              	</div>

				              	<div class = "form-group">
				            		<label for = "qtyRec">Enter Quantity Received: </label>
				              		<input type="text" class = "form-control" name = "quantity" id="qtyRec">
				              	</div>

				              	<div class = "form-group">
				            		<label for = "vendor">Enter Vendor</label>
				              		<select type="text" class = "form-control" name = "vendorname" id="vendor-input"></select>
				              	</div>

				              	<button class="btn btn-danger" id = "submitReceipt">Receive Ingredient</button>

				              	<div id="receiptMessage"></div>
				        </div>
				        <div class="col-md-3"></div>

					</form>
				</div>
	        </div>
	</div>
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="userPanel panel panel-primary">
             <div class = "panel-heading">
                <h5 class="panel-title header"><strong>My Receipt Transactions!</strong></h5>
            </div>
            <div class="panel-body tablePanel">

                  <table id="myReceiptsDisplay" class="table">
                   </table>

            </div>
          </div>
		</div>
		<div class="col-md-1"></div>
	</div>

</div>
<script src="js/receipts.js" type="text/javascript"></script>

